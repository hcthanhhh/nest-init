{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "program": "${workspaceFolder}/src/main.ts",
        "args": ["${env:NODE_ENV}", "--debug"],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "protocol": "inspector",
        "port": 9229
      }
    ]
  }
  